{
  "expo": {
    "name": "QR Code Scanner Pro",
    "slug": "qr-code-scanner-pro",
    "scheme": "qrcodescannerpro",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.chirag127.qrcodescannerpro",
      "infoPlist": {
        "NSCameraUsageDescription": "QR Code Scanner Pro needs access to your camera to scan QR codes.",
        "NSPhotoLibraryUsageDescription": "QR Code Scanner Pro needs access to your photo library to save QR codes.",
        "NSContactsUsageDescription": "QR Code Scanner Pro needs access to your contacts to add contact information from QR codes."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.chirag127.qrcodescannerpro",
      "permissions": [
        "CAMERA",
        "READ_CONTACTS",
        "WRITE_CONTACTS",
        "ACCESS_WIFI_STATE",
        "CHANGE_WIFI_STATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://qr-code-scanner-pro.com"
        }
      ],
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "QR Code Scanner Pro needs access to your camera to scan QR codes."
        }
      ],
      "expo-secure-store",
      "expo-haptics"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}